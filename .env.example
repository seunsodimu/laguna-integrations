# Laguna Integrations Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_DEBUG=false
APP_TIMEZONE=America/New_York

# NetSuite Configuration
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret
NETSUITE_BASE_URL=https://your_account.suitetalk.api.netsuite.com
NETSUITE_REST_API_VERSION=v1

# 3DCart Configuration
THREEDCART_STORE_URL=https://your-store.3dcartstores.com
THREEDCART_PRIVATE_KEY=your_private_key
THREEDCART_TOKEN=your_token

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_WEBHOOK_SECRET=your_hubspot_webhook_secret

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Laguna Integrations

# Email Configuration (SMTP - Alternative)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_ENCRYPTION=tls

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key

# Database Configuration (Optional)
DB_HOST=localhost
DB_DATABASE=integration_db
DB_USERNAME=db_user
DB_PASSWORD=db_password